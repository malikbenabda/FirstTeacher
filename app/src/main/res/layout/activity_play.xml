<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolors"
    android:id="@+id/backgroundlearn"
    tools:context="tn.esprit.numbersnshapes.Learn">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="10"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/leftplay"
            android:src="@drawable/left"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:weightSum="11"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/question"
                android:text="Question"
                android:textSize="30sp"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textStyle="bold"
                android:textColor="#dd1448"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"

            android:layout_gravity="center"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/score"
                android:text="0"
                android:textSize="30sp"
                android:gravity="right"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:shadowColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textStyle="bold"
                android:textColor="#14dd48"             />
            <ImageView
                android:layout_gravity="left"
                android:src="@drawable/bonux"

                android:layout_width="50dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnplay"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="9"
                android:orientation="horizontal"
                android:layout_weight="8">
                <ImageView
                    android:src="@drawable/balooon"
                    android:id="@+id/choice1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
                <ImageView
                    android:layout_margin="50dp"
                    android:src="@drawable/balooon"
                    android:id="@+id/choice2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
                <ImageView
                    android:src="@drawable/balooon"
                    android:id="@+id/choice3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />


            </LinearLayout>





        </LinearLayout>
        <ImageView
            android:id="@+id/rightplay"
            android:src="@drawable/right"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
