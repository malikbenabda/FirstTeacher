<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="tn.esprit.numbersnshapes.ParentalContral">


    <LinearLayout android:orientation="vertical"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
             android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_weight="4"

            android:textSize="35sp"
            android:text="Controle Parental"
            android:background="@drawable/board"
            android:textColor="#0099CC"
            android:textStyle="italic"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/colorScorePercentage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:textSize="30sp"
            android:background="@drawable/board2"
            android:text="Meilleur Score Couleur"
            android:textColor="#00AA50"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/formeScorePercentage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="2"
            android:textSize="30sp"
            android:background="@drawable/board2"
            android:text="Meilleur Score Formes"
            android:textColor="#00BB50"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/numeroScorePercentage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:textSize="25sp"
            android:background="@drawable/board2"
            android:text="Meilleur Score Numeros"
            android:textColor="#00CC50"
            android:layout_gravity="center"
            android:gravity="center"
            />
            <ImageView
                android:id="@+id/sharing_button"
                android:src="@drawable/fb"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                />




        </LinearLayout>

</RelativeLayout>
